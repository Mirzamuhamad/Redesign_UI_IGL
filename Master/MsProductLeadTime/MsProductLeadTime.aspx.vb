    Private Sub bindDataSetLeadTime()
        Try
            Dim GVR As GridViewRow
            Dim CB As CheckBox
            Dim lb As Label
            Dim HaveSelect As Boolean
            Dim SQLString As String
            HaveSelect = False
            If tbLeadTime.Text.Trim = "" Then
                tbLeadTime.Text = "0"
            End If
            If IsNumeric(tbLeadTime.Text) = False Then
                lstatus.Text = "Lead time must be input in numeric type"
                Exit Sub
            End If
            For Each GVR In DataGrid.Rows
                CB = GVR.FindControl("cbSelect")
                lb = GVR.FindControl("ProductCode")
                If CB.Checked Then
                    HaveSelect = True
                    SQLString = "Update MsProduct SET LeadTime = " + tbLeadTime.Text.Trim.Replace(",", "") + " WHERE ProductCode = " + QuotedStr(lb.Text.Trim)
                    SQLExecuteNonQuery(SQLString, ViewState("DBConnection").ToString)
                End If
            Next
            If HaveSelect = False Then
                lstatus.Text = "Please Check Product for Setting Lead Time"
                Exit Sub
            Else
                lstatus.Text = "Setting Lead Time Success for Selected Product"
            End If
            bindDataGrid()
        Catch ex As Exception
            Throw New Exception("bindDataGridsetLeadTime Error : " + ex.ToString)
        End Try
    End Sub

